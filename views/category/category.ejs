<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>categories</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Categories</h1>
    <a href="/articles/category/new" class="btn btn-success">New Category</a>

    <% category.forEach(category => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= category.category %></h4>
          <a href="/articles/category/edit/<%= category.id %>" class="btn btn-info" target="_blank">Edit</a>
          <form action="/articles/category/<%= category.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>