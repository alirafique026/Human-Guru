			<div class="container">
				<h1>Tag: <%= query %></h1>
			</div>
		</section> -->
		<!-- End page-banner section -->

		<!-- blog section 
			================================================== -->
		<section class="blog-section">
			<div class="container">
				<div class="blog-box grid-style text-center">
					<div class="row">
						<h1>Search Results:</h1>
						<% articles.forEach(article => { %>
							<%	if(article.keywords.includes(query)) { %>
								<% count++ %>
								<div class="col-lg-4 col-md-6">
									<div class="news-post article-post">
										<div class="image-holder">
											<img src="<%= article.path %>" alt="" style="min-height: 188px; max-height: 188px;min-width: 320px; max-width: 320px;">
										</div>
										<a class="text-link" href="#">Food</a>
										<h2><a href="articles/<%= article.slug %>"><%= article.title %></a></h2>
										<ul class="post-tags">
											<li><%= article.createdAt.toLocaleDateString() %></li>
											<li>by <a href="#">John Smith</a></li>
										</ul>
										<p><%= article.description %></p>
									</div>
								</div>
						  <% } %>
						<% }) %>
					</div>
					<% if(count == 0) { %>
						<section class="error-section">
							<div class="container">
								<div class="error-box">
									<h2>No Results Found</h2>
									<p>We are sorry. But the posts you are looking for cannot be found. Try using a different keyword. </p>
									<a class="button-one" href="/">Go To HomePage</a>
								</div>
							</div>
						</section>
						<% } %>
					<div class="pagination-box">
						<ul class="pagination-list">
							<li><a href="#" class="active">1</a></li>
							<li><a href="#">2</a></li>
							<li><a href="#">Next Page <i class="fa fa-angle-right"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- End blog section -->
<%- include('partials/footer') -%>