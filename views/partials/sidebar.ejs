<div class="col-lg-4">
    <div class="sidebar">

        <div class="widget social-widget">
            <ul class="social-list">
                <li>
                    <a href="#">
                        <i class="fa fa-facebook"></i>
                        facebook
                        <span>25k likes</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-twitter"></i>
                        twitter
                        <span>31k followers</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-instagram"></i>
                        instagram
                        <span>31k followers</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="widget category-widget">
            <h2>Categories</h2>
            <ul class="category-list">
                <% categories.forEach(category => { %>
                <li>
                    <a href="#">
                        <%= category.category%> <span><%= category.counter%></span>
                    </a>
                </li>
                <% })%>
            </ul>
        </div>

        <div class="widget subscribe-widget2">
            <h2 style="color: white;">Our Youtube Channel</h2>
            <div style="background-image: url('/public/images/youtube.png'); width: 100%"></div>
            <a href="https://www.youtube.com/channel/UCtluRtHGZ1Q3Q5Qj5zSpEHg" style="color: white; width: 100%; background: #e74c3c; border: none; cursor: pointer; height: 42px; border-radius: 2px; text-align: center; border: 2px solid white; padding-top: 8px;" target="_blank"><strong>Subscribe</strong></a>
        </div>

        <div class="widget list-widget">
            <h2>Latest Stories</h2>
            <ul class="list-posts">
                <% for(i=0; i<=2; i++) { %>
                    <% article = articles[i]%>
                    <li>
                        <a class="text-link" href="#"><%= article.category%></a>
                        <h2><a href="articles/<%= article.slug %>"><%= article.title %></a></h2>
                        <ul class="post-tags">
                            <li><%= article.createdAt.toLocaleDateString() %></li>
                            <!-- <li><a href="#">0 comments</a></li> -->
                        </ul>
                    </li>
                <% }%>
                
                
            </ul>
        </div>
        
