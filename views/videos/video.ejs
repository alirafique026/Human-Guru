<%- include('../partials/admin-header') -%>
  <section style="margin: 50px;">
    <div class="container">
      <h1 class="mb-4">Videos</h1>
      <a href="/articles/video/new" class="btn btn-success">New Video</a>
      <div style="display: flex; align-items:center; justify-content: center; column-gap: 05px; flex-flow:row; flex-wrap:wrap">
        <% videos.forEach(video=> { %>
          <div class="news-post video-post" style="margin-top: 40px;">
            <iframe width="370" height="270" src="<%= video.source %>" title="YouTube video player" frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen></iframe>
            <div>
              <a class="text-link" href="#">
                <%=video.category%>
              </a>
            </div>
            <h2><a style="color: black;">
                <%=video.title%>
              </a></h2>
            <ul class="post-tags">
              <li>
                <%=video.createdAt.toLocaleDateString()%>
              </li>
            </ul>
            <a href="/articles/video/edit/<%= video.id %>" class="btn btn-info" target="_blank">Edit</a>
            <form action="/articles/video/<%= video.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>

          <% }) %>
      </div>
    </div>
  </section>

  <%- include('../partials/footer') -%>