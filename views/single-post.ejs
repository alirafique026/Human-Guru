							</div>
							<div class="advertise-box">
								<a href="#"><img src="/images/upload/banners/ban3.jpg" alt=""></a>
							</div>

							<!-- comments -->
							<div class="comments">
								<h2 class="comments-title">
									 Comments
								</h2>
								<% if(article.comments !== undefined) { %>
								<ul class="comments__list">	
									<% comments.forEach(comments => { %>
									<li class="comments__list-item">
										<img class="comments__list-item-image" src="/images/upload/single/profile.jpg" alt="">
										<div class="comments__list-item-content">
											<h3 class="comments__list-item-title">
												<%= comments.name %>
											</h3>
											<span class="comments__list-item-date">
												Posted <%= comments.date %>
											</span>
											<!-- <a class="comments__list-item-reply" href="#">
												<i class="la la-mail-forward"></i>
												Reply
											</a> -->
											<p class="comments__list-item-description">
												<%= comments.comment %>
											</p>
										</div>
									</li>
									<% }) %>
								</ul>
						<%	} %>
							</div>
							<!-- end comments -->

							<!-- Contact form module -->
							<h2 class="contact-form__title">
								Write a Comment
							</h2>
							<form class="contact-form" id="comment-form" action="/comments" method="post">
								<div class="row">
									<div class="col-md-6">
										<input class="contact-form__input-text name" type="text" name="name" id="name" placeholder="Name:" required />
									</div>
									<div class="col-md-6">
										<input class="contact-form__input-text" type="text" name="mail" id="mail" placeholder="Email:" required/>
									</div>
								</div>
								<div>
									<textarea class="contact-form__textarea" name="id" id="id" hidden><%= article.id %></textarea>
								</div>
								<textarea class="contact-form__textarea" name="comment" id="comment" placeholder="Comment" required></textarea>
								<button type="submit" style="width: 100%; background: #e74c3c; border: none; cursor: pointer; height: 42px; border-radius: 2px;">Submit</button>
							</form>
							<!-- End Contact form module -->
						</div>
					</div>

					<%- include('partials/sidebar') -%>
				</div>
			</div>
		</section>
